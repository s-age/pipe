{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "python.linting.mypyEnabled": true,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "ruff",
  "python.formatting.ruffArgs": ["--line-length", "88"],
  "python.formatting.blackEnabled": false,
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.preferences.tsconfig": "src/web/tsconfig.json",
  "eslint.workingDirectories": ["src/web"],
  "mcp": {
    "enabled": true,
    "servers": {
      "pipe_tools": {
        "command": "poetry",
        "args": ["run", "python", "-m", "pipe.cli.mcp_server"]
      }
    }
  },
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
