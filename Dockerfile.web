# Multi-stage build: Build frontend first
FROM node:24 AS frontend-build

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm install

COPY . .
RUN npm run build

# Python stage
FROM python:3.12-slim

# Install Poetry using the official installer (latest version)
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# Set working directory
WORKDIR /app

# Copy pyproject.toml
COPY pyproject.toml ./

# Configure poetry: do not create virtual environment
RUN poetry config virtualenvs.create false

# Install dependencies
RUN poetry install --without dev --no-interaction --no-ansi

# Copy the rest of the application
COPY . .

# Ensure gemini CLI is available in the runtime image as well (install Node.js 24)
RUN apt-get update && \
	apt-get install -y curl ca-certificates gnupg && \
	curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
	apt-get install -y nodejs && \
	rm -rf /var/lib/apt/lists/* && \
	npm install -g @google/gemini-cli

# Copy built frontend from previous stage
COPY --from=frontend-build /app/dist/web /app/assets

# Expose port
EXPOSE 5001

# Command to run the app
CMD ["flask", "run", "--host=0.0.0.0", "--port=5001"]