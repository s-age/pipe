# Dockerfile for Python services like LSP server
FROM python:3.12-slim

# Install Poetry using the official installer (latest version)
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# Set working directory
WORKDIR /app

# Copy pyproject.toml and poetry.lock (if exists)
COPY pyproject.toml poetry.lock* ./

# Configure poetry: do not create virtual environment
RUN poetry config virtualenvs.create false

# Suppress SyntaxWarning from Whoosh library (Python 3.12 compatibility)
ENV PYTHONWARNINGS="ignore::SyntaxWarning"

# Install dependencies (including dev tools like ruff, black, mypy)
RUN poetry install --no-interaction --no-ansi --with dev,test

# Copy the rest of the application
COPY . .

# Install Node.js 24 (NodeSource) and the official Gemini CLI so `gemini` is available
# for modes that delegate to the gemini-cli tool.
RUN apt-get update && \
	apt-get install -y curl ca-certificates gnupg && \
	curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
	apt-get install -y nodejs && \
	rm -rf /var/lib/apt/lists/* && \
	npm install -g @google/gemini-cli

# Expose port for LSP
EXPOSE 2087

# Default command (can be overridden)
CMD ["python", "-m", "src.pipe.cli.pygls_server", "--tcp", "--host", "0.0.0.0", "--port", "2087"]