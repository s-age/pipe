FROM python:3.12-slim

# Install Poetry using the official installer (latest version)
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# Install Node.js 24 for ts-node and gemini-cli
RUN apt-get update && \
	apt-get install -y curl ca-certificates gnupg && \
	curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
	apt-get install -y nodejs && \
	rm -rf /var/lib/apt/lists/* && \
	npm install -g @google/gemini-cli

# Set working directory
WORKDIR /app

# Copy pyproject.toml and poetry.lock for dependency installation
COPY pyproject.toml poetry.lock* ./

# Configure poetry: do not create virtual environment
RUN poetry config virtualenvs.create false

# Install dependencies (with deterministic lock file when available)
RUN poetry install --no-interaction --no-ansi --with dev,test

# Copy the rest of the application
COPY . .

# Copy entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose port
EXPOSE 5001

# Set entrypoint
ENTRYPOINT ["/entrypoint.sh"]

# Command to run the app
CMD ["flask", "run", "--host=0.0.0.0", "--port=5001"]