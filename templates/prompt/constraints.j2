{% macro render_constraints_macro(data) %}{
  "description": "Constraints and configuration for the current session",
  "language": {{ data.language | tojson }},
  "processing_config": {
    "description": "Processing configuration settings",
    "multi_step_reasoning_active": {{ data.processing_config.multi_step_reasoning_active | tojson }}
  }{% if data.hyperparameters %},
  "hyperparameters": {
    "description": "Model hyperparameters for generation",
    "temperature": {
      "type": "float",
      "value": {{ data.hyperparameters.temperature | tojson }},
      "description": "Controls randomness in output generation (0.0-2.0)"
    },
    "top_p": {
      "type": "float",
      "value": {{ data.hyperparameters.top_p | tojson }},
      "description": "Nucleus sampling threshold (0.0-1.0)"
    },
    "top_k": {
      "type": "int",
      "value": {{ data.hyperparameters.top_k | tojson }},
      "description": "Number of top tokens to consider"
    }
  }{% endif %}
}{% endmacro %}
